"source":["from sympy import sympify, SympifyError\n","from PyDictionary import PyDictionary\n","\n","dictionary = PyDictionary()\n","\n","def solve_math(expression):\n","    try:\n","        # Use sympy to evaluate complex mathematical expressions\n","        expression = sympify(expression)\n","        result = expression.evalf()  # Evaluate to a floating point number\n","        return f\"Result: {result}\"\n","    except SympifyError as e:\n","        return f\"Math Error: {str(e)}\"\n","\n","def get_definition(word):\n","    try:\n","        # Get definitions from the dictionary\n","        meanings = dictionary.meaning(word)\n","        if meanings:\n","            return '\\n'.join([f\"{part_of_speech}: {', '.join(defs)}\" for part_of_speech, defs in meanings.items()])\n","        else:\n","            return \"No definition found for the word.\"\n","    except Exception as e:\n","        return f\"Dictionary Error: {str(e)}\"\n","\n","def chatbot():\n","    print(\"Hello, I am your chatbot. You can ask me to solve math problems or define words. Type 'exit' to end the chat.\")\n","    while True:\n","        user_input = input(\"Enter a math expression, a word, or 'exit': \")\n","        if user_input.lower() == \"exit\":\n","            print(\"Goodbye!\")\n","            break\n","        elif user_input.isalpha():\n","            # Assume it's a word and get definition\n","            print(\"Fetching definition...\")\n","            print(get_definition(user_input))\n","        else:\n","            # Assume it's a math expression and solve it\n","            print(\"Calculating math.Please wait...\")\n","            print(solve_math(user_input))\n","\n","if __name__ == \"__main__\":\n","    chatbot()\n"],"metadata":{"id":"XrQn-ahpGpWO"},"execution_count":null,"outputs":[]}]}